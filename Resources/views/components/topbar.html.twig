<!--Top bar -->
{% if admin_profile_languages is not defined %}
{% set admin_profile_languages = [] %}
{% endif %}
<div class="topbar" style="z-index: 1000">
    <nav class="navbar navbar-inverse">
        {% if left_menu_builder is defined %}
        <div class="pull-left">
            <div class="visible-xs-inline">
                <a class="hamburger-icon" role="button" aria-label="Toggle Navigation">
                    <div class="lines"></div>
                </a>
            </div>
        </div>
        {% endif %}

        {% block brand %}
        <span class="brand-area xs-text-left">
            <img src="{{ asset('admintheme/images/logo.png') }}" class="brand-logo hidden-xxs" />
            <img src="{{ asset('admintheme/images/icon.png') }}" class="brand-icon visible-xxs" />
        </span>
        {% endblock %}

        <div class="pull-right">
            {% block profile %}
            {% include 'RecognizeAdminThemeBundle::components/profile.html.twig' %}
            {% endblock profile %}
        </div>
    </nav>
</div>
<!-- Hidden navbar for fluid positioning -->
<nav class="navbar" style="z-index: 0"></nav>