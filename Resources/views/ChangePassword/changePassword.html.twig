{% extends "RecognizeAdminThemeBundle::index.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'RecognizeAdminThemeBundle:Form:bootstrap_3_layout_fa_checkboxes.html.twig' %}

{% block content %}
<div class="container-padding">
    <div class="row">
        <div class="col-xs-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('fos_user_profile_show') }}"><span>{{ 'profile.settings'|trans({}, 'RecognizeAdminThemeBundle') }}</span></a></li>
                <li class="hidden-xs"><a href="{{ path('fos_user_profile_show') }}"><span>{{ 'profile.settings'|trans({}, 'RecognizeAdminThemeBundle') }}</span></a></li>
                <li class="active"><span>{{ 'change_password.submit'|trans }}</span></li>
            </ol>
        </div>

        <div class="col-xs-12 col-md-3">
            <h2 class="text-center">{{ 'change_password.submit'|trans }}</h2>
            {% include 'RecognizeAdminThemeBundle::components/profile_image.html.twig' %}
            <p class="text-center">{{ admin_profile_username }}</p>
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
                {{ form_widget(form) }}
                <div class="form-group">
                    <button class="btn" type="submit">{{ 'change_password.submit'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}